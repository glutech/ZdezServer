package cn.com.zdez.servlet;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import cn.com.zdez.service.ZdezMsgService;
import cn.com.zdez.service.ZdezMsgService;
import cn.com.zdez.vo.AckType;
import cn.com.zdez.vo.ZdezMsgVo;

import com.google.gson.Gson;

public class Test extends HttpServlet {

	public void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		doPost(request, response);
	}

	public void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		String user_id = request.getParameter("user_id");

		ZdezMsgService schoolMsgService = new ZdezMsgService();
		ArrayList<ZdezMsgVo> result = (ArrayList<ZdezMsgVo>) schoolMsgService
				.getMsgToUpdate(Integer.valueOf(user_id));

		PrintWriter out = response.getWriter();
		Gson gson = new Gson();
		String resultStr = gson.toJson(result);
		 resultStr = new String(resultStr.getBytes("utf-8"), "iso-8859-1");
		out.append(resultStr);
		out.close();
	}

}
